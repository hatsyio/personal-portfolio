#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Type check
echo "📝 Type checking..."
pnpm exec tsc --noEmit || {
  echo "❌ Type check failed. Please fix the errors above."
  exit 1
}

# Build check
echo "🏗️  Building..."
pnpm build || {
  echo "❌ Build failed. Please fix the errors above."
  exit 1
}

echo "✅ All pre-commit checks passed!"

